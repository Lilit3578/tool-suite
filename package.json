{
  "name": "command-palette-app",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "description": "A lightweight Electron command palette with widgets and inline actions.",
  "scripts": {
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:main": "esbuild src/main/main.ts --bundle --platform=node --external:electron --outfile=dist/main/main.js",
    "build:preload": "esbuild src/main/preload.ts --bundle --platform=node --external:electron --outfile=dist/preload/preload.js",
    "build:renderer": "node esbuild.renderer.js && cp src/renderer/index.html dist/renderer/index.html",
    "dev": "concurrently \"npm:dev:main\" \"npm:dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development electron .",
    "dev:renderer": "node esbuild.renderer.js --watch",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "pack": "npm run build && electron-builder --dir"
  },
  "build": {
    "appId": "com.palette.app",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "autoprefixer": "^10.4.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron": "^32.0.0",
    "electron-store": "^11.0.2",
    "lucide": "^0.553.0",
    "lucide-react": "^0.365.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shadcn": "^3.5.0",
    "tailwind-merge": "^2.6.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.20.0",
    "esbuild-css-modules-plugin": "^3.1.5",
    "esbuild-plugin-path-alias": "^1.0.7",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.0"
  }
}
